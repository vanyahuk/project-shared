{
  "overwrite": true,
  "schema": "http://server:4000/graphql",
  "documents": "src/graphql/**/*.ts",
  "generates": {
    "src/graphql/generated/graphqlTypes.tsx": {
      "plugins": ["typescript", "typescript-operations", "typescript-react-apollo"],
      "config": {
        "withComponent": false,
        "withHOC": false
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": "eslint --fix"
  }
}
